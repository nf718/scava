{
	"metricid" : "org.eclipse.scava.metricprovider.historic.bugs.comments",
	"vis" : [ 
		{
			"id" : "bugs.comments",
			"name" : "Comments",
			"description" : "The number of comments submitted every day." ,
			"type" : "LineChart",
			"datatable" : {
				"cols" : [  { "name" : "Date", "field" : "$__date" }, 
					{ "name" : "Comments", "field" : "$numberOfComments" } ]
			},
			"x" : "Date",
			"y" : "Comments",
			"timeSeries" : true
		},{
			"id" : "bugs.cumulativeComments",
			"name" : "Comments (Cumulative)",
			"description" : "The number of comments submitted up to and including the current date." ,
			"type" : "LineChart",
			"datatable" : {
				"cols" : [  { "name" : "Date", "field" : "$__date" }, 
					{ "name" : "Comments", "field" : "$cumulativeNumberOfComments" } ]
			},
			"x" : "Date",
			"y" : "Comments",
			"timeSeries" : true
		}
	]

